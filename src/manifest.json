{
  "description": "트위터에서 나를 차단한 사람을 표시하고, 맞차단(차단반사)할 수 있는 웹 브라우저용 확장기능입니다.",
  "manifest_version": 2,
  "name": "Mirror Block",
  "author": "Gaeulbyul <aeiou256@gmail.com>",
  "version": "0.9.1",
  "homepage_url": "https://github.com/gaeulbyul/MirrorOfBlock",
  "icons": {
    "48": "icons/icon.png"
  },

  "minimum_chrome_version": "65",
  "minimum_opera_version": "52",

  "applications": {
    "gecko": {
      "id": "{85e5d0a4-fc52-4d60-8634-7c67239276de}",
      "strict_min_version": "63.0"
    }
  },

  "permissions": [
    "https://twitter.com/*",
    "https://api.twitter.com/*",
    "storage",
    "activeTab"
  ],

  "options_ui": {
    "page": "options/options.html"
  },

  "background": {
    "scripts": [
      "vendor/browser-polyfill.min.js",
      "extoption.js",
      "scripts-bg/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["*://twitter.com/*", "*://mobile.twitter.com/*"],
      "css": ["styles/mirror-of-block.css"],
      "js": [
        "vendor/browser-polyfill.min.js",
        "/extoption.js",
        "scripts/common.js",
        "scripts/twitter-api.js",
        "scripts/nightmode.js",
        "scripts/mirrorblock-badge.js",
        "scripts/mirrorblock.js",
        "scripts/mirrorblock-r.js",
        "scripts/mirrorblock-a.js",
        "scripts/mirrorblock-dm.js",
        "scripts/mirrorblock-mobile.js",
        "scripts/chainblock-ui.js",
        "scripts/chainblock.js"
      ]
    },
    {
      "matches": ["*://tweetdeck.twitter.com/*"],
      "css": ["styles/tweetdeck.css"],
      "js": [
        "vendor/browser-polyfill.min.js",
        "/extoption.js",
        "scripts/common.js",
        "scripts/twitter-api.js",
        "scripts/tweetdeck.js"
      ]
    }
  ],

  "web_accessible_resources": [
    "styles/mob-badge.css",
    "scripts/tweetdeck-inject.js",
    "scripts/twitter-inject.js",
    "vendor/uuid.js"
  ],

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Mirror Block",
    "default_popup": "popup/popup.html"
  }
}
